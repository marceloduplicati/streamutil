<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>Duplicati.StreamUtil</RootNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Duplicati.StreamUtil</PackageId>
    <Version>1.0.0</Version>

    <Copyright>Copyright 2024, Duplicati Inc</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/duplicati/streamutil</RepositoryUrl>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageDescription>A C# library with stream helpers</PackageDescription>
    <Authors>Dupllicati Inc</Authors>
    <PackageTags>StreamWrapper StreamUtil TimeoutStream</PackageTags>
    <PackageReleaseNotes>Initial version of the package</PackageReleaseNotes>
    <PackageReadmeFile>docs\README.md</PackageReadmeFile>    
  </PropertyGroup>

  <ItemGroup>
    <Content Include="../README.md">
      <Pack>true</Pack>
      <PackagePath>docs/README.md</PackagePath>
    </Content>
  </ItemGroup>

</Project>
